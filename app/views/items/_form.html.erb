<% if @item.errors.any? %>
<ul>
  <%= @item.errors.each do |error, msg| %>
  <li><%= "#{error.capitalize}, #{msg}" %></li>
  <% end %>
  </ul>
<% end %>


<div class="container">

<%= form_for @item do |i|%>
<div class="mycontent">
<div class="form-group">
<%= i.label :content, "Todo List" %>
<%= i.text_field :content, class: "form-control" %>
</div>
<div class="form-group">
<%= i.label :due_date, "Due_date" %>
<%= i.date_select :due_date, class: "form-control" %>
</div>
<div class="form-group">
<%= i.label :note, "Note" %>
<%= i.text_field :note, class: "form-control"%>
</div>
<div class="mybtn">
<%= i.submit button, class: 'btn btn-info btn-block' %>
</div>
<div class="mybtn">
<%= link_to 'back', items_path, class: 'btn btn-success btn-block'%>
</div>
</div>
</div>
<% end %>
</div>
